  "commonChallenges": {
    "description": "Common RMF challenges and solutions",
    "challenges": [
      {
        "challenge": "Long authorization timelines",
        "solution": "Start RMF activities early in SDLC, leverage FedRAMP/PA inheritance, use IATT for development",
        "azureHelp": "FedRAMP High PA for Azure Government enables faster authorization"
      },
      {
        "challenge": "Maintaining POA&M currency",
        "solution": "Automate POA&M tracking, integrate with ticketing systems",
        "azureHelp": "Azure DevOps work items linked to Defender for Cloud findings"
      },
      {
        "challenge": "Documentation burden",
        "solution": "Use infrastructure as code, automate evidence collection",
        "azureHelp": "Azure Resource Graph queries, Policy compliance exports"
      },
      {
        "challenge": "Control inheritance complexity",
        "solution": "Clearly document shared responsibility, reference CSP authorizations",
        "azureHelp": "Microsoft provides customer responsibility matrix for Azure"
      },
      {
        "challenge": "Continuous monitoring resource constraints",
        "solution": "Automate monitoring and alerting, use SOAR playbooks",
        "azureHelp": "Sentinel playbooks for automated response"
      }
    ]
  },
  "controlInheritance": {
    "description": "Control inheritance from Azure Government FedRAMP High / DoD PA",
    "inheritanceTypes": [
      {
        "type": "Fully Inherited",
        "description": "Control completely implemented by CSP",
        "examples": ["PE-2 Physical Access Authorizations", "PE-3 Physical Access Control"],
        "customerAction": "Document inheritance in SSP"
      },
      {
        "type": "Shared",
        "description": "Control implemented by both CSP and customer",
        "examples": ["AC-2 Account Management", "AU-2 Audit Events"],
        "customerAction": "Implement customer portion, document shared responsibility"
      },
      {
        "type": "Customer Responsible",
        "description": "Control fully customer responsibility",
        "examples": ["AT-2 Security Awareness Training", "PL-2 System Security Plan"],
        "customerAction": "Fully implement and document"
      }
    ],
    "azureGovernmentInheritance": {
      "fedRampLevel": "High",
      "controlsInherited": "Approximately 150+ controls fully inherited",
