{
  "metadata": {
    "name": "DoD Impact Levels and Cloud Security Requirements",
    "description": "Comprehensive guide to DoD Impact Levels (IL2, IL4, IL5, IL6) with Azure implementation requirements and control overlays",
    "version": "1.0",
    "lastUpdated": "2025-01-15",
    "sources": [
      "DoD Cloud Computing Security Requirements Guide (CC SRG)",
      "FedRAMP Authorization Requirements",
      "DISA Cloud Access Point (CAP) Requirements"
    ]
  },
  "impactLevelOverview": {
    "description": "DoD Impact Levels define the sensitivity of information and the security controls required to protect it in cloud environments",
    "levelSummary": [
      {
        "level": "IL2",
        "name": "Impact Level 2",
        "dataTypes": "Public and Non-CUI DoD Information",
        "fedRampEquivalent": "FedRAMP Moderate",
        "cloudModel": "Public/Community Cloud",
        "accessRequirement": "Internet accessible"
      },
      {
        "level": "IL4",
        "name": "Impact Level 4",
        "dataTypes": "CUI, Non-Critical Mission Information",
        "fedRampEquivalent": "FedRAMP Moderate + DoD Overlay",
        "cloudModel": "Government Community Cloud",
        "accessRequirement": "NIPRNet connectivity preferred"
      },
      {
        "level": "IL5",
        "name": "Impact Level 5",
        "dataTypes": "CUI, Mission Critical Information, National Security Systems",
        "fedRampEquivalent": "FedRAMP High + DoD Overlay",
        "cloudModel": "Government Community Cloud (Isolated)",
        "accessRequirement": "NIPRNet or dedicated connection"
      },
      {
        "level": "IL6",
        "name": "Impact Level 6",
        "dataTypes": "Classified Information up to SECRET",
        "fedRampEquivalent": "FedRAMP High + DoD SECRET Overlay",
        "cloudModel": "Secret Cloud",
        "accessRequirement": "SIPRNet or classified network"
      }
    ]
  },
  "impactLevels": {
    "IL2": {
      "name": "Impact Level 2",
      "description": "Accommodates non-controlled unclassified information that does not require special handling. Information that is publicly releasable or intended for public release.",
