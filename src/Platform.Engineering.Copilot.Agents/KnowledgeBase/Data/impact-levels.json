        "baseline": "FedRAMP Moderate",
        "additionalControls": [],
        "encryptionRequirements": {
          "dataAtRest": "AES-256 recommended",
          "dataInTransit": "TLS 1.2 or higher",
          "fipsRequirement": "FIPS 140-2 recommended"
        },
        "networkRequirements": {
          "connectivity": "Internet accessible",
          "capRequired": false,
          "dedicatedConnection": false
        },
        "personnelRequirements": {
          "clearanceRequired": "None",
          "citizenshipRequired": false,
          "backgroundCheck": "Basic background check"
        }
      },
      "azureImplementation": {
