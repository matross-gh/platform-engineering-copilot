          "Any Azure region",
          "Azure Government regions for government preference"
        ],
        "services": {
          "recommended": [
            "Azure Government (preferred)",
            "Azure Commercial (acceptable)",
            "Azure Active Directory / Entra ID",
            "Azure Policy for compliance",
            "Azure Security Center / Defender for Cloud"
          ],
          "encryption": {
            "atRest": "Azure Storage Service Encryption",
            "inTransit": "HTTPS/TLS 1.2+",
            "keyManagement": "Azure Key Vault"
          }
        },
        "policyDefinitions": [
          "/providers/Microsoft.Authorization/policyDefinitions/4733ea7b-a883-42fe-8cac-97454c2a9e4a",
          "/providers/Microsoft.Authorization/policyDefinitions/404c3081-a854-4457-ae30-26a93ef643f9"
        ],
        "complianceChecklist": [
          "Enable Azure Security Center standard tier",
          "Configure Azure Policy for FedRAMP Moderate",
          "Enable diagnostic logging",
          "Configure Azure Monitor",
          "Implement RBAC for access control",
          "Enable Azure Defender for all resource types"
        ]
      }
    },
    "IL4": {
      "name": "Impact Level 4",
      "description": "Accommodates Controlled Unclassified Information (CUI) that requires safeguarding, including DoD data not approved for public release and For Official Use Only (FOUO) data.",
      "dataClassification": {
        "authorized": [
          "Controlled Unclassified Information (CUI)",
          "For Official Use Only (FOUO)",
          "Privacy Act protected data (non-critical)",
          "DoD contractor proprietary data",
          "Non-critical mission data"
        ],
        "notAuthorized": [
          "National Security Systems (NSS) data",
          "Critical mission data",
          "Classified data (any level)",
          "Export controlled data (ITAR/EAR) without additional controls"
        ]
      },
      "securityRequirements": {
        "baseline": "FedRAMP Moderate + DoD IL4 Overlay",
        "additionalControls": [
          "AC-2(5) - Inactivity Logout",
          "AC-3(9) - Controlled Release",
          "AC-4(21) - Physical/Logical Separation",
          "AU-9(4) - Access by Subset of Privileged Users",
          "CM-3(6) - Cryptography Management",
          "IA-2(12) - Acceptance of PIV Credentials",
          "PE-3(1) - Physical Access Control",
          "SC-8(1) - Cryptographic Protection",
          "SC-28(1) - Cryptographic Protection"
        ],
        "encryptionRequirements": {
          "dataAtRest": "AES-256 required",
          "dataInTransit": "TLS 1.2 or higher required",
          "fipsRequirement": "FIPS 140-2 Level 1 minimum required"
        },
        "networkRequirements": {
          "connectivity": "NIPRNet preferred, Internet with additional controls acceptable",
          "capRequired": true,
          "dedicatedConnection": "Recommended (ExpressRoute)"
        },
        "personnelRequirements": {
          "clearanceRequired": "None (Favorable adjudication)",
          "citizenshipRequired": "US Person required for privileged access",
          "backgroundCheck": "NACI or equivalent"
        }
      },
      "azureImplementation": {
        "cloudEnvironment": "Azure Government only",
        "regions": [
          "USGov Virginia",
          "USGov Texas",
          "USGov Arizona"
        ],
        "services": {
          "required": [
            "Azure Government",
            "Azure Government Entra ID",
            "Azure ExpressRoute (recommended)",
            "Azure Key Vault (FIPS 140-2 Level 2 HSM)",
            "Azure Policy with IL4 initiative",
            "Azure Defender for Cloud"
          ],
          "encryption": {
            "atRest": "Azure Storage Service Encryption with CMK",
            "inTransit": "HTTPS/TLS 1.2+ only",
            "keyManagement": "Azure Key Vault with HSM backing"
          }
        },
        "policyDefinitions": [
          "/providers/Microsoft.Authorization/policyDefinitions/d5264498-16f4-418a-b659-fa7ef418175f",
          "/providers/Microsoft.Authorization/policyDefinitions/cf25b9c1-bd23-4eb6-bd2c-f4f3ac6f4456"
        ],
        "complianceChecklist": [
          "Deploy to Azure Government regions only",
          "Enable Azure Defender for all resource types",
          "Configure IL4-specific Azure Policy initiative",
          "Implement Customer Managed Keys (CMK) for encryption",
          "Configure ExpressRoute with Microsoft peering",
          "Enable all diagnostic and audit logging",
          "Configure Azure Sentinel for security monitoring",
          "Implement just-in-time VM access",
          "Enable Azure Firewall for network segmentation",
          "Configure Azure DDoS Protection Standard",
          "Implement PIV/CAC authentication via Entra ID"
        ],
        "networkArchitecture": {
          "pattern": "Hub and Spoke with Azure Firewall",
          "components": [
            "Azure ExpressRoute for NIPRNet connectivity",
            "Azure Firewall in hub VNET",
            "Network Security Groups on all subnets",
            "Azure Bastion for secure management",
            "Azure Private Link for PaaS services"
          ]
        }
      }
    },
    "IL5": {
      "name": "Impact Level 5",
      "description": "Accommodates higher sensitivity CUI and National Security Systems (NSS) data. Provides enhanced security for mission-critical information.",
      "dataClassification": {
        "authorized": [
          "Controlled Unclassified Information (CUI)",
          "National Security Systems (NSS) data",
          "Mission critical data",
          "ITAR/EAR controlled data",
          "Critical infrastructure data",
          "Sensitive PII requiring enhanced protection"
        ],
        "notAuthorized": [
          "Classified data (CONFIDENTIAL, SECRET, TOP SECRET)",
          "Special Access Program (SAP) data",
          "Sensitive Compartmented Information (SCI)"
        ]
      },
      "securityRequirements": {
        "baseline": "FedRAMP High + DoD IL5 Overlay",
        "additionalControls": [
          "AC-2(4) - Automated Audit Actions",
          "AC-2(7) - Privileged User Accounts",
          "AC-3(4) - Discretionary Access Control",
          "AC-6(1) - Authorize Access to Security Functions",
          "AC-6(2) - Non-privileged Access for Nonsecurity Functions",
          "AU-4(1) - Transfer to Alternate Storage",
          "AU-12(1) - System-wide/Time-correlated Audit Trail",
          "CP-6(1) - Separation from Primary Site",
          "IA-2(1) - Multi-factor to Privileged Accounts",
          "IA-2(2) - Multi-factor to Non-privileged Accounts",
          "IA-5(2) - PKI-based Authentication",
          "SC-7(8) - Route Traffic to Authenticated Proxy",
          "SC-7(18) - Fail Secure",
          "SC-12(1) - Availability",
          "SC-13 - Cryptographic Protection",
          "SC-28 - Protection of Information at Rest",
          "SI-4(5) - System-generated Alerts"
        ],
        "encryptionRequirements": {
          "dataAtRest": "AES-256 with HSM-backed keys required",
          "dataInTransit": "TLS 1.2 or higher required, TLS 1.3 recommended",
          "fipsRequirement": "FIPS 140-2 Level 2 required (Level 3 for key management)"
        },
        "networkRequirements": {
          "connectivity": "Dedicated connection required (NIPRNet or ExpressRoute)",
          "capRequired": true,
          "dedicatedConnection": "Required (ExpressRoute with Microsoft peering)",
          "networkIsolation": "Physical or logical separation required"
        },
        "personnelRequirements": {
          "clearanceRequired": "IT-I or IT-II Position of Trust",
          "citizenshipRequired": "US Citizen required for all access",
          "backgroundCheck": "SSBI or T5 investigation"
        }
      },
      "azureImplementation": {
        "cloudEnvironment": "Azure Government DoD regions only",
        "regions": [
          "USDoD Central",
          "USDoD East"
        ],
        "services": {
          "required": [
            "Azure Government DoD",
            "Azure Government Entra ID",
            "Azure ExpressRoute with DoD peering",
            "Azure Dedicated HSM or Managed HSM",
            "Azure Policy with DoD IL5 initiative",
            "Microsoft Defender for Cloud",
            "Microsoft Sentinel"
          ],
          "encryption": {
            "atRest": "Customer Managed Keys with Dedicated HSM",
            "inTransit": "HTTPS/TLS 1.3 preferred, TLS 1.2 minimum",
            "keyManagement": "Azure Dedicated HSM (FIPS 140-2 Level 3)"
          }
        },
        "policyDefinitions": [
          "/providers/Microsoft.Authorization/policyDefinitions/d5264498-16f4-418a-b659-fa7ef418175f",
          "/providers/Microsoft.Authorization/policyDefinitions/b5629c75-5c77-4422-87b9-2509e680f8de"
        ],
        "complianceChecklist": [
          "Deploy to USDoD Central or USDoD East regions ONLY",
          "Implement Azure Dedicated HSM for key management",
          "Configure ExpressRoute with DoD peering",
          "Enable all advanced threat protection features",
          "Configure Microsoft Sentinel with DoD-specific analytics",
          "Implement network micro-segmentation",
          "Enable continuous compliance monitoring",
          "Configure automated incident response playbooks",
          "Implement privileged identity management",
          "Enable just-in-time VM access for all VMs",
          "Configure Azure Confidential Computing for sensitive workloads",
          "Implement CAC/PIV authentication as primary factor",
          "Enable full audit logging with immutable storage",
          "Configure geo-redundant backup to DoD regions only"
        ],
        "networkArchitecture": {
          "pattern": "Isolated Hub and Spoke with dedicated ExpressRoute",
          "components": [
            "Dedicated ExpressRoute circuit with DoD peering",
            "Azure Firewall Premium in hub VNET",
            "Network Security Groups with deny-all default",
            "Azure Private Link for ALL PaaS services",
            "Azure Bastion Premium for secure management",
            "Network watcher for traffic analytics",
            "DDoS Protection Standard"
          ],
          "isolationRequirements": [
            "No internet egress without explicit approval",
            "All traffic must traverse Azure Firewall",
            "Private endpoints for all supported services",
            "Dedicated subnets for each workload tier"
          ]
        }
      }
    },
    "IL6": {
      "name": "Impact Level 6",
      "description": "Accommodates classified information up to and including SECRET. Requires SECRET-level facilities, personnel, and network infrastructure.",
      "dataClassification": {
        "authorized": [
          "SECRET classified information",
          "CONFIDENTIAL classified information",
          "Collateral SECRET data",
          "NATO SECRET equivalent"
        ],
        "notAuthorized": [
          "TOP SECRET information",
          "Sensitive Compartmented Information (SCI)",
          "Special Access Program (SAP) data",
          "Foreign government TOP SECRET"
        ]
      },
      "securityRequirements": {
        "baseline": "FedRAMP High + DoD IL6/SECRET Overlay",
        "additionalControls": [
          "All IL5 controls plus:",
          "AC-2(11) - Usage Conditions",
          "AC-3(10) - Audited Override",
          "AU-9(7) - Store on Component with Different OS",
          "CA-3(6) - Transfer Authorizations",
          "CM-5(4) - Dual Authorization",
          "IA-3(1) - Cryptographic Bidirectional Authentication",
          "MA-5(1) - Individuals Without Appropriate Access",
          "PE-5(3) - Tamper Protection",
          "SC-3 - Security Function Isolation",
          "SC-7(21) - Isolation of System Components",
          "SC-8(4) - Conceal/Randomize Communications"
        ],
        "encryptionRequirements": {
          "dataAtRest": "NSA Type 1 or NSA approved Suite B required",
          "dataInTransit": "NSA Type 1 or approved Suite B required",
          "fipsRequirement": "FIPS 140-2 Level 3 required, NSA approved algorithms"
        },
        "networkRequirements": {
          "connectivity": "SIPRNet or classified network only",
          "capRequired": true,
          "dedicatedConnection": "Required (Classified ExpressRoute)",
          "networkIsolation": "Air-gapped from unclassified networks"
        },
        "personnelRequirements": {
          "clearanceRequired": "SECRET clearance minimum",
          "citizenshipRequired": "US Citizen required",
          "backgroundCheck": "SSBI/T5 with SECRET adjudication"
        }
      },
      "azureImplementation": {
        "cloudEnvironment": "Microsoft Azure Government Secret (offline)",
        "regions": [
          "Azure Government Secret regions (location classified)"
        ],
        "services": {
          "required": [
            "Azure Government Secret",
            "Azure Government Secret Entra ID",
            "Classified network connectivity",
            "NSA-approved cryptographic modules",
            "Air-gapped infrastructure"
          ],
          "encryption": {
            "atRest": "NSA approved algorithms with Type 1 key management",
            "inTransit": "NSA approved Suite B or Type 1",
            "keyManagement": "NSA approved key management system"
          }
        },
        "complianceChecklist": [
          "Contact Microsoft Federal team for Azure Government Secret access",
          "Obtain facility clearance (FCL) at SECRET level",
          "Ensure all personnel have active SECRET clearances",
          "Establish classified network connectivity",
          "Complete Security Control Assessment (SCA)",
          "Obtain Interim Authorization to Test (IATT)",
          "Complete Certification and Accreditation process",
          "Obtain Authorization to Operate (ATO)"
        ],
        "notes": [
          "Azure Government Secret is an air-gapped environment",
          "Requires on-premises connectivity to classified networks",
          "All data handling must follow classified data procedures",
          "Contact Microsoft Federal sales team for access requirements"
        ]
      }
    }
