  "migrationGuidance": {
    "IL2toIL4": {
      "overview": "Migrating from IL2 to IL4 requires enhanced security controls and Azure Government deployment",
      "steps": [
        {
          "step": 1,
          "title": "Assessment",
          "description": "Evaluate current workload security posture and identify gaps",
          "tasks": [
            "Run Microsoft Defender for Cloud regulatory compliance assessment",
            "Identify data classification requirements",
            "Document current security controls",
            "Identify non-compliant resources"
          ]
        },
        {
          "step": 2,
          "title": "Planning",
          "description": "Plan migration to Azure Government with IL4 controls",
          "tasks": [
            "Design Azure Government landing zone architecture",
            "Plan ExpressRoute connectivity",
            "Design identity architecture with Entra ID",
            "Plan Customer Managed Key (CMK) implementation"
          ]
        },
        {
          "step": 3,
          "title": "Implementation",
          "description": "Deploy infrastructure in Azure Government",
          "tasks": [
            "Deploy Azure Government subscription",
            "Configure Azure Policy with IL4 initiative",
            "Implement Key Vault with CMK",
            "Configure ExpressRoute circuit",
            "Deploy hub-and-spoke network architecture"
          ]
        },
        {
          "step": 4,
          "title": "Migration",
          "description": "Migrate workloads to Azure Government",
          "tasks": [
            "Use Azure Migrate for assessment and migration",
            "Migrate data with Azure Data Box if needed",
            "Re-deploy applications in Azure Government",
            "Configure backup and disaster recovery"
          ]
        },
        {
          "step": 5,
          "title": "Validation",
          "description": "Validate compliance and security posture",
          "tasks": [
            "Run compliance assessment against IL4 baseline",
            "Conduct penetration testing",
            "Validate encryption implementation",
            "Document residual risks"
          ]
        }
      ]
    },
    "IL4toIL5": {
      "overview": "Migrating from IL4 to IL5 requires DoD region deployment and enhanced isolation",
      "steps": [
        {
          "step": 1,
          "title": "Assessment",
          "description": "Evaluate IL5 requirements and current gaps",
          "tasks": [
            "Identify IL5-specific control requirements",
            "Assess personnel clearance requirements",
            "Document network isolation needs",
            "Evaluate Dedicated HSM requirements"
          ]
        },
        {
          "step": 2,
          "title": "Planning",
          "description": "Plan migration to DoD regions",
          "tasks": [
            "Design DoD region architecture",
            "Plan Dedicated HSM deployment",
            "Design network isolation architecture",
            "Plan ExpressRoute with DoD peering"
          ]
        },
        {
          "step": 3,
          "title": "Implementation",
          "description": "Deploy infrastructure in DoD regions",
          "tasks": [
            "Provision subscription in DoD regions",
            "Deploy Azure Dedicated HSM",
            "Configure ExpressRoute with DoD peering",
            "Implement private endpoints for all services",
            "Configure Azure Sentinel with DoD analytics"
          ]
        },
        {
          "step": 4,
          "title": "Migration",
          "description": "Migrate workloads to DoD regions",
          "tasks": [
            "Coordinate with DISA for network connectivity",
            "Migrate data using approved methods",
            "Re-deploy applications in DoD regions",
            "Configure geo-redundancy within DoD regions"
          ]
        },
        {
          "step": 5,
          "title": "Authorization",
          "description": "Obtain IL5 Authorization to Operate",
          "tasks": [
            "Complete Security Control Assessment",
            "Submit authorization package to AO",
            "Address POA&M items",
            "Obtain ATO"
          ]
        }
      ]
    }
  },
