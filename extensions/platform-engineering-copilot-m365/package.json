{
  "name": "platform-copilot-m365",
  "version": "1.0.0",
  "description": "Microsoft 365 Copilot extension for Platform Engineering Copilot - AI-powered Azure infrastructure management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "watch": "tsc --watch",
    "copy-assets": "copyfiles -u 1 'src/appPackage/**/*' dist/",
    "package": "npm run build && cd dist/appPackage && bestzip ../platform-copilot-m365.zip *",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "microsoft-365",
    "m365-copilot",
    "teams",
    "azure",
    "infrastructure",
    "iac",
    "declarative-agent",
    "ai"
  ],
  "author": "Azure NoOps",
  "license": "MIT",
  "dependencies": {
    "@microsoft/teams-ai": "^1.2.0",
    "axios": "^1.6.2",
    "botbuilder": "^4.21.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "bestzip": "^2.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
