{
  "name": "platform-copilot-github",
  "displayName": "Platform Engineering Copilot for GitHub Copilot",
  "description": "GitHub Copilot Chat extension for Platform Engineering - AI-powered Azure infrastructure management",
  "version": "1.0.0",
  "publisher": "Microsoft",
  "repository": {
    "type": "git",
    "url": "https://github.com/azurenoops/platform-engineering-copilot.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages"
  ],
  "keywords": [
    "platform engineering",
    "infrastructure",
    "azure",
    "github-copilot",
    "iac",
    "bicep",
    "terraform"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "platform",
        "name": "platform",
        "fullName": "Platform Engineering Copilot",
        "description": "AI-powered Azure infrastructure management, compliance scanning, and cost analysis",
        "isSticky": true,
        "commands": [
          {
            "name": "provision",
            "description": "Provision Azure infrastructure resources"
          },
          {
            "name": "compliance",
            "description": "Run NIST 800-53 compliance scans"
          },
          {
            "name": "cost",
            "description": "Analyze and estimate Azure costs"
          },
          {
            "name": "deploy",
            "description": "Deploy applications and infrastructure"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "platform.checkHealth",
        "title": "Check Platform API Health",
        "category": "Platform Copilot"
      },
      {
        "command": "platform.configure",
        "title": "Configure Platform API Connection",
        "category": "Platform Copilot"
      }
    ],
    "configuration": {
      "title": "Platform Engineering Copilot",
      "properties": {
        "platform-copilot.apiUrl": {
          "type": "string",
          "default": "http://localhost:7001",
          "description": "Platform Copilot API URL"
        },
        "platform-copilot.apiKey": {
          "type": "string",
          "default": "",
          "description": "Platform Copilot API Key (optional)"
        },
        "platform-copilot.timeout": {
          "type": "number",
          "default": 60000,
          "description": "Request timeout in milliseconds"
        },
        "platform-copilot.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable debug logging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "npm run compile && vscode-test",
    "package": "vsce package"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}